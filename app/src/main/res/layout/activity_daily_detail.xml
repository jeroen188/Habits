<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="50dp"
        android:layout_height="62dp"
        android:src="@drawable/ic_launcher"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:gravity="left">

        <TextView
            android:id="@+id/textTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Goal"
            android:textColor="#222222"
            android:textSize="19sp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/textClicked" />

        <TextView
            android:id="@+id/textClicked"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:text="updated on"
            android:textColor="#999999"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textDimension"
            android:layout_width="320dp"
            android:layout_height="22dp"
            android:text="Dimension"
            android:ellipsize="end"
            android:lines="3"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_below="@+id/textTask"
            android:layout_toLeftOf="@+id/textStreak"
            android:layout_toStartOf="@+id/textStreak" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Streak"
            android:id="@+id/textStreak"
            android:layout_toEndOf="@+id/textClicked"
            android:layout_below="@+id/textClicked"
            android:layout_alignLeft="@+id/textClicked"
            android:layout_alignStart="@+id/textClicked"
            android:layout_alignRight="@+id/textClicked"
            android:layout_alignEnd="@+id/textClicked" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Total checks"
            android:id="@+id/textTotal"
            android:layout_toEndOf="@+id/textStreak"
            android:layout_below="@+id/textStreak"
            android:layout_alignLeft="@+id/textStreak"
            android:layout_alignStart="@+id/textStreak" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="subdimension"
            android:id="@+id/textSubdimension"
            android:layout_below="@+id/textDimension" />


    </RelativeLayout>
</LinearLayout>