<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.primo5.habits.DimensionMental"
    android:background="#00ffffff">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:baselineAligned="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/mentalHeader"
            android:id="@+id/mentalHeader"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/mentalReading"
            android:layout_toEndOf="@+id/mentalReading"
            android:layout_gravity="center_horizontal"
            android:textSize="35dp"
            android:typeface="serif"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/balanceMental"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/balanceMentalPercentage"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="90dp">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/plussign"
                android:src="@drawable/plussign"
                android:adjustViewBounds="false"
                android:baselineAlignBottom="false"
                android:cropToPadding="false"
                android:clickable="false"
                android:focusable="false"
                android:onClick="addTask"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#00ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/mentalPlanning"
                android:id="@+id/mentalPlanning"
                android:layout_above="@+id/mentalWork"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="65dp"
                android:onClick="writingDetail"
                android:textSize="20dp"
                android:typeface="serif" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="90dp">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imageButton"
                android:src="@drawable/plussign"
                android:adjustViewBounds="false"
                android:baselineAlignBottom="false"
                android:cropToPadding="false"
                android:clickable="false"
                android:focusable="false"
                android:onClick="addTask"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#00ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/mentalWork"
                android:id="@+id/mentalWork"
                android:layout_above="@+id/mentalWriting"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="65dp"
                android:textSize="20dp"
                android:typeface="serif" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="90dp">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imageButton2"
                android:src="@drawable/plussign"
                android:adjustViewBounds="false"
                android:baselineAlignBottom="false"
                android:cropToPadding="false"
                android:clickable="false"
                android:focusable="false"
                android:onClick="addTask"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#00ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/mentalWriting"
                android:id="@+id/mentalWriting"
                android:layout_above="@+id/mentalReading"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="61dp"
                android:textSize="20dp"
                android:typeface="serif" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="90dp">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imageButton3"
                android:src="@drawable/plussign"
                android:adjustViewBounds="false"
                android:baselineAlignBottom="false"
                android:cropToPadding="false"
                android:clickable="false"
                android:focusable="false"
                android:onClick="addTask"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#00ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/mentalReading"
                android:id="@+id/mentalReading"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="65dp"
                android:textSize="20dp"
                android:typeface="serif" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="220dp">


            <ImageButton
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton7"
                android:src="@drawable/twitter"
                android:adjustViewBounds="true"
                android:baselineAlignBottom="false"
                android:cropToPadding="false"
                android:clickable="false"
                android:focusable="false"
                android:onClick="addTask"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:background="#00ffffff" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton6"
                android:src="@drawable/facebook"
                android:adjustViewBounds="true"
                android:baselineAlignBottom="false"
                android:cropToPadding="false"
                android:clickable="false"
                android:focusable="false"
                android:onClick="addTask"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:longClickable="false"
                android:background="#00ffffff" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
