
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#00ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:background="#00ffffff">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/imageButton2"
            android:src="@drawable/forlife"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"
            android:cropToPadding="false"
            android:clickable="false"
            android:focusable="false"
            android:onClick="sendAbout"
            android:background="#00ffffff"
            android:layout_alignParentStart="false"
            android:paddingBottom="0dp"
            android:paddingTop="100dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="320dp"
            android:background="#00ffffff">

            <ImageView
                android:layout_width="1000dp"
                android:layout_height="1000dp"
                android:id="@+id/imageView"
                android:src="@drawable/flower"
                android:layout_alignParentBottom="true"
                android:background="#00ffffff" />

            <Button
                android:layout_width="60dp"
                android:layout_height="60dip"
                android:src="@android:color/transparent"
                android:layout_gravity="left|top"
                android:onClick="sendBalance"
                android:id="@+id/buttonCircle"
                android:layout_row="1"
                android:layout_column="3"
                android:background="#00ffffff"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="Balance"
                android:textSize="15dp"
                android:textStyle="italic"
                android:typeface="serif" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/button"
                android:layout_gravity="right|top"
                android:background="#00ffffff"
                android:onClick="sendMental"
                android:layout_row="2"
                android:layout_column="4"
                android:layout_toEndOf="@+id/buttonCircle"
                android:layout_toRightOf="@+id/buttonCircle"
                android:layout_above="@+id/buttonCircle"
                android:text="       Mental"
                android:textSize="20dp"
                android:textStyle="italic"
                android:typeface="serif"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/button2"
                android:background="#00ffffff"
                android:onClick="sendSocial"
                android:layout_row="7"
                android:layout_column="9"
                android:layout_toStartOf="@+id/buttonCircle"
                android:layout_below="@+id/buttonCircle"
                android:layout_toRightOf="@+id/buttonCircle"
                android:layout_toEndOf="@+id/buttonCircle"
                android:layout_alignRight="@+id/button"
                android:layout_alignEnd="@+id/button"
                android:text="Social"
                android:textSize="20dp"
                android:textStyle="italic"
                android:typeface="serif" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/button3"
                android:background="#00ffffff"
                android:onClick="sendPhysical"
                android:layout_row="0"
                android:layout_column="12"
                android:layout_toStartOf="@+id/buttonCircle"
                android:layout_above="@+id/buttonCircle"
                android:layout_toLeftOf="@+id/buttonCircle"
                android:text="                       Physical"
                android:textSize="20dp"
                android:textStyle="italic"
                android:typeface="serif" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/button4"
                android:background="#00ffffff"
                android:onClick="sendSpirituality"
                android:layout_toStartOf="@+id/buttonCircle"
                android:layout_row="1"
                android:layout_column="14"
                android:layout_alignTop="@+id/button2"
                android:layout_alignRight="@+id/button3"
                android:text="  Spiritual"
                android:textSize="20dp"
                android:textStyle="italic"
                android:typeface="serif" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:background="#00ffffff">

            <ImageButton
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:id="@+id/imageButton3"
                android:src="@drawable/todaybig"
                android:onClick="sendMessage"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/button4"
                android:layout_toStartOf="@+id/button4"
                android:layout_gravity="center_horizontal|bottom|left"
                android:background="#00ffffff"
                android:baselineAlignBottom="false"
                android:paddingTop="20dp" />

            <ImageButton
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:id="@+id/imageButton"
                android:src="@drawable/plussignbig90"
                android:onClick="addTask"
                android:layout_gravity="center_horizontal|bottom|left"
                android:background="#00ffffff"
                android:paddingTop="20dp" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
