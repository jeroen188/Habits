
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#00ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/imageButton2"
            android:src="@drawable/forlife"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"
            android:cropToPadding="false"
            android:clickable="false"
            android:focusable="false"
            android:onClick="sendAbout"
            android:background="#00ffffff"
            android:layout_alignParentStart="false"
            android:paddingBottom="0dp"
            android:paddingTop="100dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="322dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView"
                android:src="@drawable/flower"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="70dp"
                android:layout_height="64dip"
                android:src="@android:color/transparent"
                android:layout_gravity="left|top"
                android:onClick="sendMessage"
                android:id="@+id/buttonCircle"
                android:layout_row="1"
                android:layout_column="3"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="#00ff3d44" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/button"
                android:layout_gravity="right|top"
                android:background="#001cff3d"
                android:onClick="sendPhysical"
                android:layout_row="2"
                android:layout_column="4"
                android:layout_toEndOf="@+id/buttonCircle"
                android:layout_above="@+id/buttonCircle"
                android:layout_toRightOf="@+id/buttonCircle" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/button2"
                android:background="#00cc8b1c"
                android:onClick="sendMental"
                android:layout_row="7"
                android:layout_column="9"
                android:layout_toStartOf="@+id/buttonCircle"
                android:layout_below="@+id/buttonCircle"
                android:layout_toRightOf="@+id/buttonCircle"
                android:layout_toEndOf="@+id/buttonCircle"
                android:layout_alignRight="@+id/button"
                android:layout_alignEnd="@+id/button" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/button3"
                android:background="#002c7bcc"
                android:onClick="sendSpirituality"
                android:layout_row="0"
                android:layout_column="12"
                android:layout_toStartOf="@+id/buttonCircle"
                android:layout_above="@+id/buttonCircle"
                android:layout_toLeftOf="@+id/buttonCircle" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/button4"
                android:background="#00ccc507"
                android:onClick="sendSocial"
                android:layout_toStartOf="@+id/buttonCircle"
                android:layout_row="1"
                android:layout_column="14"
                android:layout_alignTop="@+id/button2"
                android:layout_alignRight="@+id/button3" />

        </RelativeLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton3"
            android:src="@drawable/ic_action_favorite"
            android:onClick="sendBalance"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/button4"
            android:layout_toStartOf="@+id/button4"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>


</RelativeLayout>
